{
	"$id": "https://www.eosc-life.eu/d7/WfExS-backend/Stage-Definition",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "WfExS-backend stage definition",
	"description": "WfExS-backend stage definition file (EOSC-Life Demonstrator 7 JSON Schemas)",
	"type": "object",
	"definitions": {
		"LicensedURI": {
			"type": "object",
			"properties": {
				"uri": {
					"type": "string",
					"description": "The URI of the resource",
					"format": "uri",
					"minLength": 1
				},
				"licences": {
					"type": "array",
					"items": {
						"type": "string",
						"description": "URL to the description of the licence of the data. And by default, no permission to use or distribute it",
						"format": "uri",
						"default": "https://choosealicense.com/no-permission/",
						"minLength": 1
					}
				},
				"attributions": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Name of the author",
								"minLength": 1
							},
							"pid": {
								"type": "string",
								"description": "A unique way to represent this author, either through her/his ORCID or another permanent, representative link",
								"format": "uri",
								"minLength": 1
							},
							"roles": {
								"type": "array",
								"uniqueItems": true,
								"items": {
									"type": "string",
									"documentation": "The valid roles come from CASRAI CRediT, and can be visited through http://credit.niso.org/contributor-roles/{term}/",
									"enum": [
										"conceptualization",
										"data-curation",
										"formal-analysis",
										"funding-acquisition",
										"investigation",
										"methodology",
										"project-administration",
										"resources",
										"software",
										"supervision",
										"validation",
										"visualization",
										"writing-original-draft",
										"writing-review-editing"
									]
								},
								"minItems": 1
							}
						},
						"required": [
							"name",
							"pid",
							"roles"
						]
					}
				},
				"security-context": {
					"documentation": "The name of the optional security context to be used to authenticate in order to reach the resource",
					"type": "string",
					"minLength": 1
				}
			},
			"required": [
				"uri"
			]
		},
		"Param": {
			"oneOf": [
				{
					"type": [
						"string",
						"number",
						"boolean"
					]
				},
				{
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				{
					"type": "array",
					"items": {
						"type": "number"
					}
				},
				{
					"type": "array",
					"items": {
						"type": "boolean"
					}
				},
				{
					"oneOf": [
						{
							"type": "object",
							"properties": {
								"c-l-a-s-s": {
									"type": "string",
									"enum": [
										"File",
										"Directory"
									]
								},
								"url": {
									"oneOf": [
										{
											"type": "string",
											"format": "uri",
											"minLength": 1
										},
										{
											"$ref": "#/definitions/LicensedURI"
										},
										{
											"type": "array",
											"items": {
												"oneOf": [
													{
														"$ref": "#/definitions/LicensedURI"
													},
													{
														"type": "string",
														"format": "uri",
														"minLength": 1
													},
													{
														"type": "array",
														"items": {
															"oneOf": [
																{
																	"$ref": "#/definitions/LicensedURI"
																},
																{
																	"type": "string",
																	"format": "uri",
																	"minLength": 1
																}
															]
														},
														"minItems": 2
													}
												]
											},
											"minItems": 1
										}
									]
								},
								"security-context": {
									"type": "string",
									"minLength": 1
								},
								"globExplode": {
									"type": "string"
								},
								"autoFill": {
									"description": "When this key is true, the directory or file is considered an output one",
									"type": "boolean",
									"default": false
								},
								"autoPrefix": {
									"type": "boolean",
									"default": false
								}
							},
							"required": [
								"c-l-a-s-s"
							],
							"additionalProperties": false,
							"if": {
								"properties": {
									"c-l-a-s-s": {
										"const": "Directory"
									}
								}
							},
							"then":	{
								"if": {
									"required": [
										"url"
									]
								},
								"then": {
									"not": {
										"required": [
											"autoFill",
											"autoPrefix"
										]
									}
								},
								"else": {
									"not": {
										"required": [
											"security-context",
											"globExplode"
										]
									}
								}
							}
						},
						{
							"$ref": "#/definitions/Params"
						}
					]
				}
			]
		},
		"Params": {
			"type": "object",
			"patternProperties": {
				"^(?!c-l-a-s-s).+$": {
					"$ref": "#/definitions/Param"
				}
			},
			"additionalProperties": false
		}
	},
	"properties": {
		"trs_endpoint": {
			"title": "The optional TRS endpoing",
			"description": "If this key is set, it will tell the GA4GH TRS service where to look for the workflow_id (and optional version)",
			"type": "string",
			"format": "uri"
		},
		"version": {
			"title": "Workflow version",
			"description": "If trs_enpoint key is set, it will tell the version of the workflow_id to look for at GA4GH TRS",
			"type": [
				"string",
				"integer"
			]
		},
		"workflow_id": {
			"oneOf": [
				{
					"type": "string",
					"format": "uri"
				},
				{
					"type": "integer"
				}
			]
		},
		"nickname": {
			"title": "A friendly nickname (prefix) for the instances",
			"type": "string"
		},
		"paranoid_mode": {
			"type": "boolean",
			"default": false
		},
		"workflow_type": {
			"title": "The optional, forced workflow type",
			"description": "When this key is set, it is forcing the workflow type. WfExS-backend is usually able to identify the workflow type, unless there are two intertwined workflows in the same location",
			"type": "string",
			"enum": [
				"nextflow",
				"cwl"
			]
		},
		"workflow_config": {
			"type": "object",
			"properties": {
				"secure": {
					"type": "boolean"
				},
				"writable_containers": {
					"type": "boolean",
					"default": false
				},
				"nextflow": {
					"type": "object",
					"properties": {
						"version": {
							"type": "string",
							"minLength": 1,
							"default": "19.04.1"
						},
						"profile": {
							"type": "string",
							"minLength": 1
						}
					}
				},
				"cwl": {
					"type": "object",
					"properties": {
						"version": {
							"type": "string",
							"minLength": 1,
							"default": "3.1.20210628163208"
						}
					}
				}
			}
		},
		"params": {
			"$ref": "#/definitions/Params"
		},
		"outputs": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"type": "object",
					"properties": {
						"c-l-a-s-s": {
							"type": "string",
							"enum": [
								"File",
								"Directory"
							]
						},
						"cardinality": {
							"title": "Output cardinality",
							"description": "Expected cardinality of this output",
							"oneOf": [
								{
									"type": "string",
									"enum": [
										"1",
										"?",
										"*",
										"+"
									]
								},
								{
									"type": "integer",
									"minimum": 0
								},
								{
									"type": "array",
									"items": [
										{
											"type": "integer",
											"minimum": 0
										},
										{
											"type": "integer",
											"minimum": 1
										}
									],
									"minItems": 2,
									"maxItems": 2
								}
							],
							"default": 1
						},
						"preferredName": {
							"description": "Preferred name for this output, honored when either filledFrom or glob are used",
							"type": "string",
							"minLength": 1
						},
						"fillFrom": {
							"description": "Autofilled input from where to get the files and directories to be assigned to this output, useful in workflow models where outputs are not explicitly declared (Nextflow, Snakemake)",
							"type": "string",
							"minLength": 1
						},
						"glob": {
							"description": "Glob pattern to get the files and directories to be assigned to this output, useful in workflow models where outputs are not explicitly declared (Nextflow, Snakemake)",
							"type": "string",
							"minLength": 1
						}
					},
					"additionalProperties": false,
					"required": [
						"c-l-a-s-s"
					]
				}
			}
		}
	},
	"required": [
		"workflow_id"
	],
	"additionalProperties": false
}
